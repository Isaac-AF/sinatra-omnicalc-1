<form action="/payment/results">
  <div>  
    <label for="APR">APR</label>
    <input id="APR" type="text" name="user_APR" placeholder="E.g. 5.42"></input>
  </div>
  <div>  
    <label for="years">Number of years</label>
    <input id="years" type="text" name="user_years" placeholder="How many years to repay?"></input>
  </div>
  <div>  
    <label for="principal">Principal</label>
    <input id="principal" type="text" name="user_principal" placeholder="How much principal?"></input>
  </div>
  <div>
    <button>Calculate monthly payment</button>
  </div>
</form>
